{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.9",
  "parameters": {
      "vaultSubscription": {
        "type": "string",
        "defaultValue": "[subscription().subscriptionId]",
        "metadata": {
          "description": "The name of the subscription that contains the keyvault."
        }
      },
      "vaultResourceGroupName": {
        "type": "string",
        "metadata": {
          "description": "The name of the resource group that contains the keyvault."
        }
      },
      "vaultName": {
        "type": "string",
        "metadata": {
          "description": "The name of the keyvault that contains the secret."
        }
      },
      "vaultSecretAdminUsername": {
        "type": "string",
        "defaultValue": "vmAdminUsername",
        "metadata": {
          "description": "The name of the secret for admin username."
        }
      },
      "vaultSecretAdminPassword": {
        "type": "string",
        "defaultValue": "vmAdminPassword",
        "metadata": {
          "description": "The name of the secret for admin password."
        }
      },
      "virtualNetworkName": {
          "type": "string",
          "defaultValue": "vnet"
      },
      "virtualMachineName": {
          "type": "string"
      },
      "networkSecurityGroupRules": {
          "type": "array"
      }
  },
  "variables": {
    "virtualMachineName0": "[concat(parameters('virtualMachineName'), '0')]",
    "virtualMachineName1": "[concat(parameters('virtualMachineName'), '1')]",
    "vmSubnet0": "[concat(parameters('virtualNetworkName'), '-sub0')]",
    "vmSubnet1": "[concat(parameters('virtualNetworkName'), '-sub1')]"
  },
  "resources": [
      {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "azuredeploy-vnet",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/SzkolaChmury/master/Azure/Architecture/Az-303/Zadanie3/3.2/vnet.json",
          "contentVersion":"1.0.0.9"
        },
        "parameters": {
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["azuredeploy-vnet"],
      "name": "azuredeploy-vm0",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/SzkolaChmury/master/Azure/Architecture/Az-303/Zadanie3/3.2/vm.json",
          "contentVersion":"1.0.0.9"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName0')]"
            },
            "adminUsername":{
                "reference": {
                    "keyVault": {
                        "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                    },
                    "secretName": "[parameters('vaultSecretAdminUsername')]"
                }
            },
            "adminPassword":{
                "reference": {
                    "keyVault": {
                        "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                    },
                    "secretName": "[parameters('vaultSecretAdminPassword')]"
                }
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet0')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["azuredeploy-vnet"],
      "name": "azuredeploy-vm1",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/SzkolaChmury/master/Azure/Architecture/Az-303/Zadanie3/3.2/vm.json",
          "contentVersion":"1.0.0.9"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName1')]"
            },
            "adminUsername":{
                "reference": {
                    "keyVault": {
                        "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                    },
                    "secretName": "[parameters('vaultSecretAdminUsername')]"
                }
            },
            "adminPassword":{
                "reference": {
                    "keyVault": {
                        "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                    },
                    "secretName": "[parameters('vaultSecretAdminPassword')]"
                }
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet1')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    }
  ],
  "outputs": {}
}